<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0"
        id="br.dotter.battery"
        version   = "1.0.0">
		
    <name>Battery Status</name>
    <description>
        Battery
    </description>
	
	<author href="http://www.dotter.com.br" email="eduardo@dotter.com.br">
    Dotter do Brasil Ltda
    </author>
	
	<!--https://cordova.apache.org/docs/en/3.0.0/cordova/events/events.batterystatus.html-->
	
	<gap:plugin name="org.apache.cordova.battery-status" version="0.2.11" />
    <gap:plugin name="org.apache.cordova.device" />
		
	<preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />
	<preference name="permissions" 		value="none"/>
	
	<feature name="http://api.phonegap.com/1.0/battery"/>
	
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />   
</widget>